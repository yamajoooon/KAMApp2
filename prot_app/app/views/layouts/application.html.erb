<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("出席管理App", "/posts/index") %>
        <% else %>
          <%= link_to("出席管理App", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        
        <% if @current_user %>
          
          <li>
            <%= link_to("担当科目","/courses/index")%>
          </li>
          <li>
            <%= link_to("新規グループ作成","/courses/new")%>
          </li>
          
          <li>
            <%= link_to("NowUser:"+"#{@current_user.name}","/users/#{@current_user.id}")%>
          </li>
          <li>
            <%= link_to("出席提出","/courses/courses_index")%>
          </li>
          <li>
            <%= link_to("出席情報一覧","/posts/index")%>
          </li>
          <li>
            <%= link_to("新規出席","/posts/new")%>
          </li>
          <li>
            <%= link_to("学生一覧","/users/index")%>
          </li>
          <li>
            <%= link_to("ログアウト","/logout",{method: :post})%>
          </li>
          
        <% else %>
          
          <li>
            <%= link_to("出席管理Appについて ","/about")%>
          </li>
          <li>
            <%= link_to("新規登録","/signup")%>
          </li>
          <li>
            <%= link_to("ログイン","/login")%>
          </li>
        <% end%>
        </li>
      </ul>
    </header>
    <% if %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
